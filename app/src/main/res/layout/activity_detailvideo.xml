<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <RelativeLayout
        android:id="@+id/relmyVideo"
        android:layout_width="wrap_content"

        android:layout_height="50dp"
        android:background="@drawable/abc_vector_test"
        android:elevation="22dp"


        >

        <ImageView
            android:id="@+id/arrowVideo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="10sp"
            android:background="@drawable/ic_back"


            android:contentDescription="@string/todo" />

        <TextView
            android:id="@+id/backVideo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10sp"
            android:gravity="top"
            android:lineSpacingExtra="2sp"
            android:text="@string/back"
            android:textAppearance="@style/label"
            android:textColor="@color/red"
            android:textSize="13sp"
            android:translationY="-0.86sp" />

        <TextView
            android:id="@+id/playlistDetailVideo"
            android:layout_width="62dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="149dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:lineSpacingExtra="0sp"
            android:text="@string/playlist"
            android:textAppearance="@style/playlist"
            android:textColor="@color/red"
            android:textSize="15sp"

            />

    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/DetailContainerVideo"
       android:layout_marginTop="50dp"
        >

        <com.google.android.exoplayer2.ui.PlayerView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="27dp"
            android:id="@+id/player_view"
            app:resize_mode="fit"
            app:hide_on_touch="true"
            app:show_timeout="5000"
            app:rewind_increment="10000"
            app:use_controller="true"
            android:background="@drawable/rectangle_8"
            app:player_layout_id="@layout/exo_simple_player_view"
            app:controller_layout_id="@layout/custom_controller"
            />
        <ProgressBar
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/progress_bar"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="100dp"
            />



        <TextView
            android:id="@+id/titleVideo"
            android:layout_width="328dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="291dp"

            android:textAppearance="@style/how_displac"
            android:gravity="top"
            />



        <android.widget.Button
            android:id="@+id/btnDownload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="351dp"


            android:background="@drawable/rectangle_3"

            />





        <TextView
            android:id="@+id/descriptionVideo"
            android:layout_width="328dp"
            android:layout_height="198dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="407dp"

            android:textAppearance="@style/refugee_chi"
            android:gravity="top"
            />




    </androidx.cardview.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relmyVideo"
        android:layout_width="wrap_content"

        android:layout_height="50dp"
        android:background="@drawable/abc_vector_test"
        android:elevation="22dp"


        >

        <ImageView
            android:id="@+id/arrowVideo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="10sp"
            android:background="@drawable/ic_back"


            android:contentDescription="@string/todo" />

        <TextView
            android:id="@+id/backVideo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10sp"
            android:gravity="top"
            android:lineSpacingExtra="2sp"
            android:text="@string/back"
            android:textAppearance="@style/label"
            android:textColor="@color/red"
            android:textSize="13sp"
            android:translationY="-0.86sp" />

        <TextView
            android:id="@+id/playlistDetailVideo"
            android:layout_width="62dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="149dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:lineSpacingExtra="0sp"
            android:text="@string/playlist"
            android:textAppearance="@style/playlist"
            android:textColor="@color/red"
            android:textSize="15sp"

            />

    </RelativeLayout>



    <android.widget.Button
       android:id="@+id/backBtn"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/ic_launcher_background"
        />
    <android.widget.Button
       android:id="@+id/playBtn"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/play_arrow"
        />
    <android.widget.Button
       android:id="@+id/nextBtn"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/play_arro"
        />


<androidx.recyclerview.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="40dp"
tools:listitem="@layout/videolist"
    android:id="@+id/video_recyclerView"
    />





</RelativeLayout>